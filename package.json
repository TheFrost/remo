{
  "name": "remo-2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prefix-css": "postcss --use autoprefixer styles/*.css -d styles/",
    "build-css": "node-sass --include-path scss assets/styles/main.scss styles/main.css",
    "postbuild-css": "npm run prefix-css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "serve": "browser-sync start --server './' --files './' --browser firefox"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "postcss-cli": "^2.6.0",
    "browser-sync": "~2.17.5"
  },
  "author": "",
  "license": "ISC"
}
